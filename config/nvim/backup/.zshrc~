# timer for aboo coming with notification and beep
function timer {
  str='                        BEEP !                    ';
  sleep $1 && notify-send $str && sleep 2s && aplay media/beep.wav && notify-send $str;
}

function conv-all {
  for mov in *.mp4; do
    ffmpeg -i ${mov} -vf scale=-1:360 360.${mov} || ffmpeg -i ${mov} -vf scale=-1:480 480.${mov};
  done
  for mov in *.mkv; do
    ffmpeg -i ${mov} -vf scale=-1:360 360.${mov} || ffmpeg -i ${mov} -vf scale=-1:480 480.${mov};
  done
}

function conv {
  ffmpeg -i ${1} -vf scale=-1:360 360.${1} || ffmpeg -i ${1} -vf scale=-1:480 480.${1};
}


